<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ct_chat_input_style">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:maxLines">4</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15.6sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:hint">请输入你的消息</item>
        <item name="android:background">@drawable/ct_input_bg</item>
    </style>


    <!--聊天界面-右侧文字气泡-->
    <style name="ct_chat_right_style">
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">@drawable/ct_item_send_bg</item>
    </style>

    <!--聊天界面-左侧文字气泡-->
    <style name="ct_chat_left_style">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:background">@drawable/ct_item_receive_bg</item>
    </style>

</resources>
